{
  // Markdownlint configuration for Claude Code hooks
  // Disables rules that are too strict for AI-generated markdown

  "default": true,

  // Disable line length - Claude generates varied lengths
  "MD013": false,

  // Allow duplicate headings (common in generated docs)
  "MD024": false,

  // Allow multiple H1s (not always single-document)
  "MD025": false,

  // Allow inline HTML when needed
  "MD033": false,

  // Don't require first line to be heading
  "MD041": false,

  // Configure trailing spaces - allow 2 for line breaks
  "MD009": {
    "br_spaces": 2
  },

  // Configure list indentation
  "MD007": {
    "indent": 2
  }
}
